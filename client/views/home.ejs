<%- include('partials/header'); %>
<section id="blogs">
    <% articles.forEach(article => { %>
      <div class="blog-container ">
        <div class="row">
          <div class="col-xl-4"> 
            <img style="width: 100%;" src="http://localhost:4000/uploads/article_images/<%=article.article_image %> " class="rounded mx-auto d-block" alt="blog-thumbnail">
          </div>
          <div class="col-xl-8">
            <div class="blog-view-content">
              <h2><a style="color: black; text-decoration: none;" href="/article/<%= article.slug %>"><%= article.title %></a> </h2>
              <p><%= article.description %> <p>
              <div class="row">
                <div class="col-6 ">
                  <p><% const date = new Date (Date.parse(article.createdAt)) %> <%= date.toLocaleDateString() %>  </p>
                </div>
                <div class=" pe-4 col-6"><p class="text-end align-items-center"><b>Yazar: </b>
                  <% let array = article.user.name.split(" ") %>  
                  <% let name = " " %>  
                  <%  for( let i = 0; i < array.length; i++ ) { %> 
                  <% name += lodash.upperFirst(array[i]) + " " %> 
                  <% } %> 
                  <%= name %> 
                </p></div>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% }) %>
</section>

<%- include('partials/footer'); %>